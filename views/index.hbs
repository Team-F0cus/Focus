    <a href="/details/{{this._id}}">View details</a>
    <p>Responsible: {{this.responsible}}</p>
    <p>Category: {{this.category}}</p>
    <p>Priority: {{this.priority}}</p>
  {{!-- add the form to handle the POST request to remove a specific book  --}}
