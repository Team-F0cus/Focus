<div
  id="task-form"
  class="flex flex-col items-center justify-center px-6 py-8 mx-auto lg:py-0"
>
  <div
    class="w-full lg:w-1/2 bg-white rounded-lg shadow sm:max-w-md md:max-w-xl lg:max-w-2xl md:mt-28"
  >
    <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
      <a href="/"><img src="/images/left.png" class="w-10" /></a>
      <h1
        class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl"
      >{{task.title}}</h1>

      <h2><span class="font-semibold">Responsible :
        </span>{{task.responsible.username}}</h2>
      <p><span class="font-semibold">Description :
        </span>{{task.description}}</p>
      <p><span class="font-semibold">Priority : </span>{{task.priority}}</p>
      <p><span class="font-semibold">Category : </span>{{task.category}}</p>
      <a
        href="task/edit/{{_id}}"
        class="inline-flex items-center px-3 py-2 mr-1 text-sm font-medium text-center text-white bg-emerald-800 rounded-lg hover:bg-emerald-900 focus:ring-4 focus:outline-none focus:ring-blue-300"
      >Edit</a>
      <form
        action="task/delete/{{_id}}"
        method="POST"
        class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-rose-500 rounded-lg hover:bg-rose-600 focus:ring-4 focus:outline-none focus:ring-blue-300"
      >
        <button>Delete</button>
      </form>
    </div>
  </div>
</div>